root=true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.css]
indent_style = space
indent_size = 2

[./themes/blank/**/*.html]
indent_style = space
indent_size = 2
max_line_length = 160
